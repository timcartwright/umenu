<%= simple_form_for @order, url: charges_path, method: 'POST' do |f| %>

  <%= f.input :total_price, as: :hidden %>
  <%= f.input :restaurant_id, as: :hidden %>
  <%= f.input :id, as: :hidden %>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Test purchase from umenu"
          data-amount= <%= @total_price * 100 %>
          data-currency="gbp"
          data-locale="auto">
          </script>
<% end %>