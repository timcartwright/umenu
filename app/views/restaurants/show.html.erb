<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="well">
      
      <h2>
        <%= @restaurant.name %>
      </h2>
      
        <table class="table">
        <% @menucategories.each do |category| %>
          <tr class="menu-category">
            <th><h3><%= category.name %></h3></th>
            <th class="text-center">Rs.</th>
            <th class="text-center"></th>
          </tr>
              <% category.menuitems.each do |item| %>
              <tr>
                <td>
                  <%= item.name %>
                  <p class="item-description"><%= item.description %></p>
                </td>
                <td class="text-center"><%= "#{item.price}" %></td>
                <% if current_user %>
                  <td class="text-center">
                    <%= link_to '', order_items_path(item: item, restaurant: @restaurant), class: "fa fa-plus-circle", method: :post, remote: true %>
                  </td>
                <% end %>
              </tr>
              <% end %>
        <% end %>
        </table>
      </div>
    </div>
    <% if current_user %>
      <div class="col-md-6">
        
          <% if @orderitems.any? %>
            <%= render 'order_items/order_form' %>
          <% else %>
            <%= render 'order_items/order_teaser' %>
          <% end %>
        
      </div>
    <% else %>
      <div class="col-md-6 text-center">
        <div class="well">
          <h2>Your Order</h2>
          <p>
            <%= link_to "Sign In To Order", new_user_session_path, class: "btn btn-primary btn-lge" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>