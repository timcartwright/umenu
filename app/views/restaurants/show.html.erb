<div class="container">
  <div class="row">
    <div class="col-md-6">
      
      <h2>
        <%= @restaurant.name %>
      </h2>
      
      <div>
        <% @menucategories.each do |category| %>
          <h3>
            <%= category.name %>
          </h3>
          <table class="table">
              <% category.menuitems.each do |item| %>
              <tr>
                <td><%= item.name %></td>
                <td><%= item.price %></td>
                <% if current_user %>
                  <td>
                    <%= link_to "Add", order_items_path(item: item, restaurant: @restaurant), method: :post %>
                  </td>
                <% end %>
              </tr>
              <% end %>
          </table>
        <% end %>
      </div>
    </div>
    <% if current_user %>
      <div class="col-md-6">
        <h2 class="text-center">Your Order</h2>
        
        <h4>
          Order Total: <%= @order.total_price %>
          <span class="pull-right"><%= render "stripe" %></span>
        </h4>
        <table class="table">
            <tr>
              <th>Item</th>
              <th>Price</th>
              <th>Quantity</th>
            </tr>
          <% @orderitems.each do |item| %>
            <tr>
              <td><%= item.menu_item.name %></td>
              <td><%= item.price %></td>
              <td><%= item.quantity %></td>
              <td><%= link_to "x", order_item_path(item), method: :delete %></td>
            </tr>
          <% end %>
        </table>
      </div>
    <% else %>
      <div class="col-md-6 text-center">
        <h2>Your Order</h2>
        <p>
          <%= link_to "Sign In To Order", new_user_session_path, class: "btn btn-primary btn-lge" %>
        </p>
      </div>
    <% end %>
  </div>
</div>