<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="well">
      
      <h2>
        <%= @restaurant.name %>
      </h2>
      
        <table class="table">
        <% @menucategories.each do |category| %>
          <tr class="menu-category">
            <th><h3><%= category.name %></h3></th>
            <th class="text-center">Rs</th>
            <th class="text-center">Order</th>
          </tr>
              <% category.menuitems.each do |item| %>
              <tr>
                <td><%= item.name %></td>
                <td class="text-center"><%= "#{item.price}" %></td>
                <% if current_user %>
                  <td class="text-center">
                    <%= link_to '', order_items_path(item: item, restaurant: @restaurant), class: "fa fa-plus-circle", method: :post %>
                  </td>
                <% end %>
              </tr>
              <% end %>
        <% end %>
        </table>
      </div>
    </div>
    <% if current_user %>
      <div class="col-md-6">
        <div class="well">
          <h2>Your Order</h2>
          
          <table class="table">
              <tr>
                <th>Item</th>
                <th class="text-center">Rs</th>
                <th class="text-center">Quantity</th>
                <th class="text-center">Remove</th>
              </tr>
            <% @orderitems.each do |item| %>
              <tr>
                <td><%= item.menu_item.name %></td>
                <td class="text-center"><%= item.price %></td>
                <td class="text-center"><%= item.quantity %></td>
                <td class="text-center"><%= link_to '', order_item_path(item), class: "fa fa-minus-circle remove", method: :delete %></td>
              </tr>
            <% end %>
                <tr>
                  <td><h4>Order Total</h4></td>
                  <td class="text-right"><h4><%= "#{@order.total_price}" %></h4></td>
                  <td class="text-right"><%= render "stripe" %></td>
                  <td></td>
                </tr>
          </table>
        </div>
      </div>
    <% else %>
      <div class="col-md-6 text-center">
        <div class="well">
          <h2>Your Order</h2>
          <p>
            <%= link_to "Sign In To Order", new_user_session_path, class: "btn btn-primary btn-lge" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>