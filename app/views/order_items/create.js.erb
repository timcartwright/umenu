if ( $('#order-teaser').length ) {
  $('#order-teaser').replaceWith('<%= j render('order_items/order_form') %>');
} else {
  <% if @quantity == 1 %>
    $('#live-order').append('<%= j render(@order_item) %>');
  <% else %>
    $('#<%= dom_id(@order_item) %>').replaceWith('<%= j render(@order_item) %>');
  <% end %>
};

$('#live-order-total').replaceWith('<%= j render('order_total') %>');