<h2 class="text-center">Pending Orders for <%= @restaurant.name %></h2>
<section id="orders">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if @orders.any? %>
        <table class="table table-striped">
          <tr>
            <th>Order No</th>
            <th>From</th>
            <th>Time</th>
            <th class="text-center">Paid</th>
            <th class="text-center">Fulfilled</th>
            <th></th>
          </tr>
          <%= render @orders %>
        </table>
      <% else %>
        <div class="well">
          There are no orders pending.
        </div>
      <% end %>
    </div>
  </div>
</section>